<UserControl x:Class="FakerDumpAnalyzer.Views.ExporterDesmos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FakerDumpAnalyzer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel>
            <Button Content="Экспорт верхней полилинии" Command="{Binding ExportLower}"></Button>
            <Button Content="Экспорт нижней полилинии" Command="{Binding ExportUpper}"></Button>
            <Button Content="Экспорт проекции" Command="{Binding ExportToolPlane}"></Button>
            <Button Content="Экспорт пересечения секторов" Command="{Binding ExportSectorIntersections}"></Button>
            <Button Content="Экспорт пересечения прогресса" Command="{Binding ExportProgressIntersections}"></Button>
            <Button Content="ExportSectors" Command="{Binding ExportSectors}"></Button>
            <Button Content="ExportLocalSectorSegmentIntersections" Command="{Binding ExportLocalSectorSegmentIntersections}"></Button>
            <Button Content="ExportFrontSegments" Command="{Binding ExportFrontSegments}"></Button>
            <Button Content="ExportTarget" Command="{Binding ExportTarget}"></Button>
            <Button Content="ExportTerrain" Command="{Binding ExportTerrain}"></Button>
            <Button Content="ExportBucketPlane" Command="{Binding ExportBucketPlane}"></Button>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding MinX}"></TextBox>
                <TextBlock Text="&lt;= x =&gt;"></TextBlock>
                <TextBox Text="{Binding MaxX}"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding MinY}"></TextBox>
                <TextBlock Text="&lt;= y =&gt;"></TextBlock>
                <TextBox Text="{Binding MaxY}"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding MinZ}"></TextBox>
                <TextBlock Text="&lt;= z =&gt;"></TextBlock>
                <TextBox Text="{Binding MaxZ}"></TextBox>
            </StackPanel>

            <TextBox Text="{Binding Content}"></TextBox>

        </StackPanel>
        
    </Grid>
</UserControl>
